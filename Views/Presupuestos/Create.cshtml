@{
ViewData["Title"] = "Create";
}
@model PresupuestoViewModel;
<main class="text-center">
    <h1 class="display-4">Crear nuevo Presupuesto</h1>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="NombreDestinatario"></label>
            <input asp-for="NombreDestinatario" class="form-control" />
            <span asp-validation-for="NombreDestinatario" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FechaCreacion"></label>
            <input asp-for="FechaCreacion" type="date" class="form-control" />
            <span asp-validation-for="FechaCreacion" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
    </form>
</main>