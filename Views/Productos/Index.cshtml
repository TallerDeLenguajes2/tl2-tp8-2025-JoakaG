@{
    ViewData["Title"] = "Productos";
}

<main class="text-center">
    <h1 class="display-4">Detalle de Presupuesto</h1>
    <h2>Listado de Presupuestos</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>
                    <a asp-controller="Productos" asp-action="Create" class="btn btn-success">+ Agregar Producto</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.IdProducto</td>
                    <td>@p.Descripcion</td>
                    <td>@p.Precio</td>
                    <td>
                        <a asp-controller="Productos" asp-action="Edit" asp-route-id="@p.IdProducto" class="btn btn-warning m-3">Modificar</a>
                        <a asp-controller="Productos" asp-action="Delete" asp-route-id="@p.IdProducto" class="btn btn-danger m-3">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>